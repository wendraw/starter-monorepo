{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*.vue", "src/*.ts", "src/**/*.ts", "../../packages/*/**/*"],
  "exclude": ["**/dist", "**/types"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "composite": true,
    "declaration": true,
    "baseUrl": ".",
    "declarationDir": "./types",
    "outDir": "./dist",
    "paths": {
      "@wendraw/*": ["../../packages/*/src"]
    }
  }
}
