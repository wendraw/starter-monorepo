{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "sourceMap": false,
    "composite": true,

    "strictFunctionTypes": true,

    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "skipLibCheck": true,

    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": false,
    "strict": true,
    "isolatedModules": true,

    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["node", "vite/client"],
    "paths": {
      "@wendraw/*": ["packages/*/src", "packages/inner/*/src"]
    }
  },
  "include": ["packages", "packages/inner", "playground"],
  "exclude": [
    "node_modules",
    "**/*.md",
    "**/dist",
    "packages/.test",
    "packages/_docs"
  ],
  // "references": [
  //   { "path": "packages/lib" },
  //   { "path": "packages/ui" },
  //   { "path": "playground" }
  // ]
}
